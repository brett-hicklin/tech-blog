<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blogPost| }}
<div class="row mb-3 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      
      <a href="/blogpost/{{blogPost.id}}">{{blogPost.title}}</a>
    </h2>
   
    <p>Created by {{blogPost.user.name}} on {{format_date blogPost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
     <em> {{blogPost.body}}</em>
    </p>
  </div>
</div>
{{/each}}
