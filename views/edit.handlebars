

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post</h3>
{{!-- edit blog post form --}}
    <form class="form edit-post-form">
      <div class="form-group">
        <label for="post-title">Blog post title:</label>
        <input value={{title}} class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">content:</label>
        <textarea class="form-input" id="post-body" name="post-body">{{body}}</textarea>
      </div>
      <div class="form-group">
        <button id="submit-edit" type="submit" data-id="{{id}}" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="../js/edit.js"></script>
