<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
{{!-- new blog post form --}}
    <form class="form">
      <div class="form-group">
        <label for="post-title">Blog post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">content:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
{{!-- displays all of the user's created blog posts, if they have created any --}}
  {{#if blogPosts.length}}
  <div class="col-md-6">
    <h3>Your posts:</h3>

    {{#each blogPosts as |blogPost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogPost.id}}">{{blogPost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button id="delete" class="btn btn-sm btn-danger" data-id="{{blogPost.id}}">DELETE</button>
        <button id="edit" class="btn btn-sm " data-id="{{blogPost.id}}">EDIT</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
